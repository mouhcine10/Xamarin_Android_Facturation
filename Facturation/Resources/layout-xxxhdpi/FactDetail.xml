
<LinearLayout
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
                />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutGlobal"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:layout_weight="1"
        >
        <android.support.design.widget.TextInputLayout
            android:textColor="@color/colortexttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout6">
            <android.support.design.widget.TextInputEditText
                android:hint="@string/IDFactureDetail"
                android:textColor="@color/colortexttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInputEditTextreffac" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:textColor="@color/colortexttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout2">
            <android.support.design.widget.TextInputEditText
                android:hint="@string/EntrepriseDetailFacture"
                android:textColor="@color/colortexttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInputEditTextNomENtrepriseDetailFacture" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout3">
            <EditText
                android:textColor="@color/colortexttext"
                android:hint="@string/DatefacturationDetailFacture"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextCreationDate" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:textColor="@color/colortexttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout4"
            app:counterTextAppearance="@drawable/btncolor">
            <EditText
                android:textColor="@color/colortexttext"
                android:hint="@string/DateValiditeDetailFacture"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextpaiementDatefacture" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout5" />
        <Button
            android:text="Valider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonvaliderDetail"
            android:layout_margin="10dp"
            android:textColor="@color/colortexttext"
            android:background="@drawable/btncolor" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_weight="0"
        android:background="@color/colorPrimary">
        <com.google.android.gms.ads.AdView
            ads:adUnitId="@string/Banner_Ads17"
            ads:adSize="350x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView1" />
        <com.google.android.gms.ads.AdView
            ads:adUnitId="@string/Banner_Ads18"
            ads:adSize="350x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView2" />
    </LinearLayout>



</LinearLayout>