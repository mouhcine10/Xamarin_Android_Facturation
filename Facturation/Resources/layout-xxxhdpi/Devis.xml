
<LinearLayout
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey_300">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
                />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent "
        android:id="@+id/scrollView2"
        android:background="@color/colorPrimary"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayoutglobal"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutads1">
                <com.google.android.gms.ads.AdView
                     ads:adUnitId="@string/Banner_Ads11"
                     ads:adSize="350x50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adViewDevis" />
            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView1">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearLayout1">
                    <LinearLayout
                        android:id="@+id/ly2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/s"
                        android:layout_margin="10dp">

                        <TextView
                            android:text="@string/phraseDevis"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView13"
                            android:textColor="@color/colortexttext"
                            android:layout_gravity="center" />



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout2"
                            android:background="@drawable/s"
                            android:layout_margin="10dp"
                            android:padding="5dp">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/linearLayout3">
                                <TextView
                                    android:text="@string/IDDevis"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="26.5dp"
                                    android:id="@+id/textViewIDdevis"
                                    android:textColor="@color/colortexttext" />
                                <TextView
                                    android:text="@string/EntrepriseDevis"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewEnreptisedevis"
                                    android:textColor="@color/colortexttext" />
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/linearLayout4"
                                android:layout_marginLeft="110dp">
                                <TextView
                                    android:text="@string/DatecreationDevis"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView15"
                                    android:textColor="@color/colortexttext" />
                                <TextView
                                    android:text="20/05/2020"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewdatedevise"
                                    android:textColor="@color/colortexttext" />
                                <TextView
                                    android:text="@string/DatedevalidationDevis"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textView16"
                                    android:textColor="@color/colortexttext" />
                                <TextView
                                    android:text="20-05-2020"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/textViewdatevalidation"
                                    android:textColor="@color/colortexttext" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/linearLayoutCLient"
                        android:layout_margin="10dp"
                        android:background="@drawable/s">
                        <TextView
                            android:text="@string/ChoisirvotreclientDevis"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textViewCLientDevis"
                            android:textColor="@color/colortexttext"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayoutAddArticle"
                        android:layout_margin="10dp"
                        android:background="@drawable/s">
                        <ImageView
                            android:src="@drawable/iconsajouter64"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/imageView1" />
                        <TextView
                            android:text="@string/AjouterArticleServiceDevis"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/textView6" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/linearLayout18">
                        <ListView
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:id="@+id/listViewarticleDevis"
                            android:background="@drawable/s"
                            android:layout_margin="10dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayoutTablemontant"
                        android:background="@drawable/s"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout7"
                            android:background="@android:color/background_light"
                            android:layout_margin="5dp">
                            <TextView
                                android:text="@string/SousTotalDevis"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView7"
                                android:textColor="@color/colortexttext" />
                            <TextView
                                android:text="0.00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textViewSoutoDevis"
                                android:layout_marginLeft="210dp"
                                android:textColor="@color/colortexttext" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout8"
                            android:layout_margin="5dp"
                            android:background="@android:color/background_light">
                            <TextView
                                android:text="@string/RemiseDevis"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView9"
                                android:textColor="@color/colortexttext" />
                            <TextView
                                android:text="0.00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textViewRemisDevis"
                                android:layout_marginLeft="235dp"
                                android:textColor="@color/colortexttext" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout9"
                            android:layout_margin="5dp"
                            android:background="@android:color/background_light">
                            <TextView
                                android:text="@string/TaxeDevis"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView11"
                                android:textColor="@color/colortexttext" />
                            <TextView
                                android:text="0.00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textViewTaxeDevis"
                                android:layout_marginLeft="260dp"
                                android:textColor="@color/colortexttext" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/linearLayout10"
                            android:layout_margin="5dp"
                            android:background="@android:color/background_light">
                            <TextView
                                android:text="@string/TotalDevis"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textView13"
                                android:textColor="@color/colortexttext" />
                            <TextView
                                android:text="0.00"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/textViewTotalDevis"
                                android:layout_marginLeft="255dp"
                                android:textColor="@color/colortexttext" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout15">
                        <TextView
                            android:layout_marginLeft="15dp"
                            android:text="@string/ModedepaiementDevis"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView12"
                            android:textColor="@color/colortexttext" />
                        <Spinner
                            android:layout_width="match_parent"
                            android:outlineAmbientShadowColor="@color/colortexttext"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerModepaiementDevis"
                            android:textDirection="ltr"
                            android:layout_margin="5dp"/>
                    </LinearLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:id="@+id/textInputLayout"
                        android:layout_margin="10dp">
                        <EditText
                            android:textColor="@color/colortexttext"
                            android:hint="@string/NoteDevis"
                            android:inputType="textMultiLine"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/editTextOvservation" />
                    </android.support.design.widget.TextInputLayout>
                    <Button
                        android:text="@string/SignatureDevis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SignatureDevise"
                        android:textColor="@color/colortexttext"
                        android:background="@drawable/s"
                        android:layout_margin="10dp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageViewSignatureDevis" />
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:layout_weight="0"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout11">
                <com.google.android.gms.ads.AdView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adView1Devis" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout19"
        android:layout_weight="0">
        <com.google.android.gms.ads.AdView
            ads:adUnitId="@string/Banner_Ads12"
                ads:adSize="350x50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/adView2Devis" />
    </LinearLayout>

</LinearLayout>