    
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
                />
    <ScrollView
        android:background="@color/colorPrimary"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayoutGlobale">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2">
                <com.google.android.gms.ads.AdView
                    ads:adUnitId="@string/Banner_Ads3"
                    ads:adSize="350x50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adView1banqe" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout1">
                <TextView
                    android:text="Information Bancaire"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colortexttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
          />
                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout1"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:hint="@string/Nomdebanquecl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputEditTextNombanque" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout2"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:hint="@string/BICcl2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputEditTextBIC" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout3"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="@string/IBANcl2"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputEditTextIBAN" />
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:text="Devise:"  
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_margin="10dp"
                    android:textColor="@color/colortexttext" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerDevis"
                    android:layout_margin="10dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4"
                android:layout_marginTop="20dp">
                <Button
                    android:text="@string/btncl2precedant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonPrecedant"
                    android:background="@drawable/s"
                    android:textColor="@color/colortexttext"
                    android:layout_marginLeft="10dp" />
                <Button
                    android:text="@string/btncl2suivant"
                    android:textColor="@color/colortexttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginLeft="100dp"
                    android:id="@+id/buttonsuivantbbanque"
                    android:background="@drawable/s"
                  
                  
                   />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <com.google.android.gms.ads.AdView
            ads:adUnitId="@string/Banner_Ads4"
            ads:adSize="350x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView2banqe" />
    </LinearLayout>






</LinearLayout>