<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimary">@color/colortexttext</item>
    <item name="colorPrimaryDark">@color/colortexttext</item>
    <item name="colorAccent">@color/colortexttext</item>
  </style>
  <style name="AppTheme.NoActionBar" >

    <item name="colorPrimary">@color/holo_red_dark</item>
    <item name="colorPrimaryDark">@color/colortexttext</item>
    <item name="colorAccent">#00fa9a</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.text">
    <item name="colorPrimary">#2c3e50</item>
    <item name="colorPrimaryDark">@color/colortexttext</item>
    <item name="colorAccent">@color/colortexttext</item>

  </style>
</resources>
