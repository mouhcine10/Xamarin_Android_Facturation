<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
                />
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayoutGlobale">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2">
                <com.google.android.gms.ads.AdView
                     ads:adUnitId="@string/Banner_Ads50"
                ads:adSize="350x50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/adView1banqe" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout1">
                <TextView
                    android:text="@string/InformationBancaire"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:textColor="@android:color/background_light" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout1"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:hint="@string/Nomdebanque"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputEditTextNombanqueupdate" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout2"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:hint="@sstring/BIC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputEditTextBICupdate" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputLayout3"
                    android:layout_margin="10dp">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:hint="@string/IBAN"
                        android:layout_height="wrap_content"
                        android:id="@+id/textInputEditTextIBANupdate" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout4">
                <Button
                    android:text="@string/Enregistrer"
                    android:textColor="@color/colortexttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonsuivantbbanqueupdate"
                    android:background="@drawable/s"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_weight="0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <com.google.android.gms.ads.AdView
             ads:adUnitId="@string/Banner_Ads51"
                ads:adSize="350x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView2banqe" />
        <com.google.android.gms.ads.AdView
          ads:adUnitId="@string/Banner_Ads52"
                ads:adSize="350x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView3baque" />
    </LinearLayout>






</LinearLayout>
