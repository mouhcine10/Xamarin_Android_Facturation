<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
                />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView1"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@id/linearLayoutGlobal"
            android:background="@color/colorPrimary">
            <com.google.android.gms.ads.AdView
                 ads:adUnitId="@string/Banner_Ads47"
                ads:adSize="350x50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adView1Updatecl" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:id="@+id/textInputLayout1"
                android:layout_margin="10dp">
                <android.support.design.widget.TextInputEditText
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nom:"
                    android:id="@+id/textInputEditTextNomupdate" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout2"
                android:layout_margin="10dp">
                <android.support.design.widget.TextInputEditText
                    android:hint="Email"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputEditTextEmailupdate" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout3"
                android:layout_margin="10dp">
                <android.support.design.widget.TextInputEditText
                    android:hint="Adresse:"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputEditTextAdresseupdate" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout4"
                android:layout_margin="10dp">
                <EditText
                    android:hint="TÃ©lephone: "
                    android:textColor="@android:color/white"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTelePhoneupdate" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout5"
                android:layout_margin="10dp">
                <android.support.design.widget.TextInputEditText
                    android:hint="Code Postal:"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputEditTextCodePostalupdate" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout6"
                android:layout_margin="10dp">
                <android.support.design.widget.TextInputEditText
                    android:hint="Ville:"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputEditTextVilleupdate" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:id="@+id/textInputLayout7"
                android:layout_margin="10dp">
                <android.support.design.widget.TextInputEditText
                    android:hint="Pays:"
                    android:textColor="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textInputEditTextPaysupdate" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2"
                android:layout_margin="10dp">
                <Button
                    android:text="suivant"
                    android:textColor="@color/colortexttext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonsuivantupdate"
                    android:background="@drawable/s" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout1">
                <com.google.android.gms.ads.AdView
                     ads:adUnitId="@string/Banner_Ads49"
                ads:adSize="350x50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/adView2Updatecl" />




            </LinearLayout>
        </LinearLayout>



    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3" >
        <com.google.android.gms.ads.AdView
           ads:adUnitId="@string/Banner_Ads48"
                ads:adSize="350x50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/adView12updatecl"
            android:layout_weight="0" />
    </LinearLayout>

</LinearLayout>



