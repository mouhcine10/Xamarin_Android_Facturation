
<LinearLayout
     xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        
                />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_weight="1">

        <Xamarin.Controls.SignaturePadView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/signaturePadView5"
            >

        </Xamarin.Controls.SignaturePadView>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_margin="10dp">
            <Button
                android:text="Enregistrer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonrenregis"
                android:background="@drawable/s"
                android:textColor="@color/colortexttext"
             />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_weight="0">
        <com.google.android.gms.ads.AdView
           ads:adUnitId="@string/Banner_Ads21"
                ads:adSize="350x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView1Signature" />
        <com.google.android.gms.ads.AdView
            ads:adUnitId="@string/Banner_Ads22"
                ads:adSize="350x50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adView2Signature" />
    </LinearLayout>


</LinearLayout>